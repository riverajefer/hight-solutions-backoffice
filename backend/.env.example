# Database
# For development: Use your Supabase PostgreSQL URL
# For staging/production: Use Railway PostgreSQL URL
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Configuration
# IMPORTANT: Generate strong secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET="your-strong-secret-here"
JWT_REFRESH_SECRET="your-strong-refresh-secret-here"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Application
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS configuration)
FRONTEND_URL="http://localhost:5173"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=auto
AWS_ENDPOINT_URL=https://your-s3-endpoint.com
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_SIGNED_URL_EXPIRATION=3600
