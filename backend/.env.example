# Database
# For development: Use your Supabase PostgreSQL URL
# For staging/production: Use Railway PostgreSQL URL
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Configuration
# IMPORTANT: Generate strong secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET="your-strong-secret-here"
JWT_REFRESH_SECRET="your-strong-refresh-secret-here"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Application
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS configuration)
FRONTEND_URL="http://localhost:5173"
