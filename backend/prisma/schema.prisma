generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  refreshToken String?
  roleId       String
  cargoId      String?
  profilePhoto String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String?
  lastName     String?

  role          Role          @relation(fields: [roleId], references: [id])
  cargo         Cargo?        @relation(fields: [cargoId], references: [id])
  sessionLogs   SessionLog[]
  createdOrders Order[]

  @@map("users")
}

model Area {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cargos Cargo[]

  @@map("areas")
}

model Cargo {
  id          String   @id @default(uuid())
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  areaId String
  area   Area   @relation(fields: [areaId], references: [id])

  users User[]

  @@unique([name, areaId])
  @@map("cargos")
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  permissions RolePermission[]
  users       User[]

  @@map("roles")
}

model Permission {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  roles       RolePermission[]

  @@map("permissions")
}

model RolePermission {
  roleId       String
  permissionId String
  assignedAt   DateTime   @default(now())
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model AuditLog {
  id            String   @id @default(cuid())
  userId        String?  @map("user_id")
  recordId      String   @map("record_id")
  action        String
  model         String
  oldData       Json?    @map("old_data")
  newData       Json?    @map("new_data")
  changedFields Json?    @map("changed_fields")
  ipAddress     String?  @map("ip_address")
  userAgent     String?  @map("user_agent")
  metadata      Json?
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("audit_logs")
}

// =============================================================================
// MÓDULO DE UBICACIONES (Departamentos y Ciudades de Colombia)
// =============================================================================

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  cities    City[]
  clients   Client[]
  suppliers Supplier[]

  @@map("departments")
}

model City {
  id           String   @id @default(uuid())
  name         String
  departmentId String   @map("department_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  department Department @relation(fields: [departmentId], references: [id])
  clients    Client[]
  suppliers  Supplier[]

  @@unique([name, departmentId])
  @@map("cities")
}

// =============================================================================
// MÓDULO DE CLIENTES Y PROVEEDORES
// =============================================================================

enum PersonType {
  NATURAL
  EMPRESA
}

model Client {
  id           String     @id @default(uuid())
  name         String
  manager      String?
  phone        String?
  address      String?
  email        String     @unique
  departmentId String     @map("department_id")
  cityId       String     @map("city_id")
  personType   PersonType @map("person_type")
  nit          String?
  isActive     Boolean    @default(true) @map("is_active")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  department Department @relation(fields: [departmentId], references: [id])
  city       City       @relation(fields: [cityId], references: [id])
  orders     Order[]

  @@map("clients")
}

model Supplier {
  id           String     @id @default(uuid())
  name         String
  phone        String?
  address      String?
  email        String     @unique
  departmentId String     @map("department_id")
  cityId       String     @map("city_id")
  personType   PersonType @map("person_type")
  nit          String?
  isActive     Boolean    @default(true) @map("is_active")
  createdAt    DateTime   @default(now()) @map("created_at")
  updatedAt    DateTime   @updatedAt @map("updated_at")

  department Department @relation(fields: [departmentId], references: [id])
  city       City       @relation(fields: [cityId], references: [id])

  @@map("suppliers")
}

// =============================================================================
// MÓDULO DE SESSION LOGS (Registros de inicio y cierre de sesión)
// =============================================================================

model SessionLog {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  loginAt   DateTime  @default(now()) @map("login_at")
  logoutAt  DateTime? @map("logout_at")
  ipAddress String?   @map("ip_address")
  userAgent String?   @map("user_agent")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loginAt])
  @@index([logoutAt])
  @@map("session_logs")
}

// =============================================================================
// MÓDULO DE CATÁLOGOS - FASE 1: UNIDADES DE MEDIDA
// =============================================================================

model UnitOfMeasure {
  id           String   @id @default(uuid())
  name         String   @unique
  abbreviation String   @unique
  description  String?
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  suppliesAsPurchase    Supply[] @relation("PurchaseUnit")
  suppliesAsConsumption Supply[] @relation("ConsumptionUnit")

  @@map("units_of_measure")
}

// =============================================================================
// MÓDULO DE CATÁLOGOS - FASE 2: CATEGORÍAS DE SERVICIOS
// =============================================================================

model ServiceCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  sortOrder   Int      @default(0) @map("sort_order")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  services Service[]

  @@map("service_categories")
}

// =============================================================================
// MÓDULO DE CATÁLOGOS - FASE 3: SERVICIOS
// =============================================================================

model Service {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  basePrice   Decimal? @map("base_price")
  priceUnit   String?  @map("price_unit")
  categoryId  String   @map("category_id")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  category   ServiceCategory @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]

  @@unique([name, categoryId])
  @@map("services")
}

// =============================================================================
// MÓDULO DE CATÁLOGOS - FASE 4: CATEGORÍAS DE INSUMOS
// =============================================================================

model SupplyCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  icon        String?
  sortOrder   Int      @default(0) @map("sort_order")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  supplies Supply[]

  @@map("supply_categories")
}

// =============================================================================
// MÓDULO DE CATÁLOGOS - FASE 5: INSUMOS
// =============================================================================

model Supply {
  id                   String   @id @default(uuid())
  name                 String
  sku                  String?  @unique
  description          String?
  categoryId           String   @map("category_id")
  purchasePrice        Decimal? @map("purchase_price")
  purchaseUnitId       String   @map("purchase_unit_id")
  consumptionUnitId    String   @map("consumption_unit_id")
  conversionFactor     Decimal  @default(1) @map("conversion_factor")
  currentStock         Decimal  @default(0) @map("current_stock")
  minimumStock         Decimal  @default(0) @map("minimum_stock")
  isActive             Boolean  @default(true) @map("is_active")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  category          SupplyCategory @relation(fields: [categoryId], references: [id])
  purchaseUnit      UnitOfMeasure  @relation("PurchaseUnit", fields: [purchaseUnitId], references: [id])
  consumptionUnit   UnitOfMeasure  @relation("ConsumptionUnit", fields: [consumptionUnitId], references: [id])

  @@unique([name, categoryId])
  @@map("supplies")
}

// =============================================================================
// MÓDULO DE ÓRDENES - FASE 2: CONSECUTIVOS Y ÓRDENES DE PEDIDO
// =============================================================================

enum OrderStatus {
  DRAFT         // Borrador (editable)
  CONFIRMED     // Confirmada (bloqueada para edición)
  IN_PRODUCTION // En producción
  READY         // Lista para entrega
  DELIVERED     // Entregada
  CANCELLED     // Cancelada
}

model Consecutive {
  id         String   @id @default(uuid())
  type       String   @unique // "ORDER", "PRODUCTION", "EXPENSE"
  prefix     String   // "OP", "PROD", "GAS"
  year       Int      // 2025, 2026, etc.
  lastNumber Int      @default(0) @map("last_number") // Último número generado
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("consecutives")
}

model Order {
  id           String      @id @default(uuid())
  orderNumber  String      @unique @map("order_number") // "OP-2025-0001"
  clientId     String      @map("client_id")
  orderDate    DateTime    @default(now()) @map("order_date")
  deliveryDate DateTime?   @map("delivery_date") // Fecha estimada de entrega

  // Cálculos financieros
  subtotal     Decimal     // Suma de todos los items
  taxRate      Decimal     @default(0.19) @map("tax_rate") // IVA 19%
  tax          Decimal     // subtotal * taxRate
  total        Decimal     // subtotal + tax
  paidAmount   Decimal     @default(0) @map("paid_amount") // Abonos realizados
  balance      Decimal     // total - paidAmount (saldo pendiente)

  status       OrderStatus @default(DRAFT)
  notes        String?     // Observaciones generales

  // Auditoría
  createdById  String      @map("created_by_id")
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  // Relaciones
  client      Client      @relation(fields: [clientId], references: [id])
  createdBy   User        @relation(fields: [createdById], references: [id])
  items       OrderItem[]

  @@index([clientId])
  @@index([createdById])
  @@index([orderDate])
  @@index([status])
  @@map("orders")
}

model OrderItem {
  id             String  @id @default(uuid())
  orderId        String  @map("order_id")
  serviceId      String? @map("service_id") // Opcional: servicio del catálogo

  // Datos del item
  description    String  // Descripción del servicio/producto
  quantity       Decimal // Cantidad
  unitPrice      Decimal @map("unit_price") // Precio unitario
  total          Decimal // quantity * unitPrice

  // Especificaciones técnicas (JSON flexible)
  specifications Json?   // { color: "rojo", material: "acero", dimensiones: "10x20" }

  sortOrder      Int      @default(0) @map("sort_order") // Orden de visualización
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relaciones
  order   Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  service Service? @relation(fields: [serviceId], references: [id])

  @@index([orderId])
  @@index([serviceId])
  @@map("order_items")
}

